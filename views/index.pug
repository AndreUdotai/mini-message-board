block content
  div#app
    div#header
      h1#title= title
      //- p#description Welcome to #{title}
    div#main
      div#addNew
        a(href='/new')
          button#button Add new

      div#content
        each val in messages
          h3#name= val.user
          p#message= val.text
          p#time= val.added
